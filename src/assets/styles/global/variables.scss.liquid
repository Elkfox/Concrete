// Spacing
$spacing: 10px !default;
$gutter: $spacing*5 !default;

// Screen Sizes
$s: 600px !default;
$m: 950px !default;
$l: 1250px !default;
$xl: 1500px !default;

// Colors
$colorBrand: {{ settings.color_brand }};
$colorText: {{ settings.color_text }};
$colorBackground: {{ settings.color_background }};
$colorBorder: {{ settings.color_border }};
$colorAlternate: {{ settings.color_alternate }};

// Typography
$fontBaseSize: 16px !default;
$fontBaseLineHeight: 1.5;

// Borders
$borderWeight: 1px;
$borderStyle: solid;
$borderRadius: 2px;
