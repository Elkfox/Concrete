/**
* Import additional stylesheets into this sheet using CSS imports:
* @import url('./global/form.scss');
**/

@import '~normalize.css/normalize';

@import url('../global/variables.scss.liquid');
@import url('../global/grid50.mixins.scss');
@import url('../global/grid50.reset.scss');

@import url('../global/typography.scss');

@import url('../global/grid50.scss');
@import url('../global/grid50.helpers.scss');

@import url('../global/forms.scss');
@import url('../global/media.scss');
@import url('../global/social.scss');

@import url('../global/animation.scss');

/* Global ====================================================================*/

body {
  background-color: $colorBackground;
  color: $colorText;
}

a {
  color: $colorBrand;
  text-decoration: underline;
  &:hover {
    text-decoration: none;
  }
}

img {
  max-width: 100%;
}

hr {
  display: block;
  height: $borderWeight;
  border: 0;
  border-top: $borderWeight $borderStyle $colorBorder;
}

/* Helpers ===================================================================*/

.visually-hidden {
  @include visually-hidden;
}

/* RTE containers ============================================================*/

.rte {
  p:not(:last-child) {
    margin-bottom: 1rem;
  }
}

/* Header ================================================================*/

header {
  .logo {
    margin: 0;
  }
}

/* Navigation ================================================================*/

/**
* The starting point for dropdown menus is about as light as is possible
**/

nav {
  ul {
    > li {
      position: relative;
      ul {
        display: none;
        position: absolute;
        top: 100%;
        z-index: 2;

        // Demo styles
        border: $borderWeight $borderStyle $colorBrand;
        background-color: $colorBackground;
        padding: $spacing;

        li {
          display: block;
        }
      }
      &:hover {
        ul {
          display: block;
        }
      }
    }
  }
}

/* Mini cart =================================================================*/

/**
* The mini cart is provided as a simple demo of a non-Ajax cart summary
**/

#MiniCart {
  position: relative;
  > div {
    display: none;
    position: absolute;
    top: 100%;
    z-index: 2;

    // Demo styles
    border: $borderWeight $borderStyle $colorBrand;
    background-color: $colorBackground;
    padding: $spacing;
    img {
      float: left;
      margin-right: $spacing;
    }

  }
  &:hover {
    > div {
      display: block;
    }
  }
}

/* Customers =================================================================*/

/**
* The 'form-container' class makes Shopify forms behave nicely
**/

.form-container {
  max-width: 25em;
  margin: 0 auto;
  form {
    width: 100%;
  }
  // Add the class 'wide' to make the form grow to fit the parent element
  &.wide {
    max-width: 100%;
  }
  input[type="text"],
  input[type="email"],
  input[type="number"],
  input[type="tel"],
  input[type="password"],
  textarea {
    width: 100%;
    @include clearfix();
    &:not(:last-child) {
      margin-bottom: $spacing;
    }
  }
}

// Responsive Forms
@include s() {
  form,
  button, .button,
  input,
  textarea {
    width: 100%;
    @include clearfix();
    &:not(:last-child) {
      margin-bottom: $spacing*2;
    }
  }
}
