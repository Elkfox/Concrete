// START TEMPORARY

  body {
    font-size: $fontBaseSize;

    font-family: $fontBodyFamily;
    font-weight: $fontBodyWeight;
    line-height: $fontBaseLineHeight;

    background-color: $colorBackground;
    color: $colorText;
  }
  p {
    font-size: 1rem;
  }
  a {
    color: $colorBrand;
  }
  h1, h2, h3, h4, h5, h6,
  .h1, .h2, .h3, .h4, .h5, .h6 {
    font-family: $fontHeadingFamily;
    font-weight: $fontHeadingWeight;
    line-height: $fontBaseLineHeight;
  }
  h1, .h1 {
    font-size: 2.5rem;
  }
  h2, .h2 {
    font-size: 2rem;
  }
  h3, .h3 {
    font-size: 1.75rem;
  }
  h4, .h4 {
    font-size: 1.5rem;
  }
  h5, .h5 {
    font-size: 1.25rem;
  }
  h6, .h6 {
    font-size: 1rem;
  }
  small {
    font-size: 0.8rem;
  }

  img {
    max-width: 100%;
  }




  header {
    .logo {
      margin: 0;
    }
  }

// END TEMPORARY
