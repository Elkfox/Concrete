/**
* Styles for Product and Collection templates
*
* Import additional stylesheets into this sheet using CSS imports:
* eg. @import url('./global/variables.scss.liquid');
**/

@import url('../global/variables.scss.liquid');

$inputNumberWidth: $fontBaseSize*3;

// Add to cart form
#AddToCartForm {
  width: 100%;
  margin-bottom: $spacing*2;
  input[type="number"] {
    width: $inputNumberWidth;
    text-align: center;
    // Hide the 'spinner' in Webkit browsers
    &::-webkit-inner-spin-button,
    &::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
    // Hide the 'spinner' in Firefox
    -moz-appearance: textfield;
  }
  select {
    width: 100%;
    margin-bottom: $spacing*2;
  }
  .quantity-adjust {
    a {
      text-decoration: none;
      padding: $spacing;
    }
  }
}
