    "theme_version": "3.0.0",
    "theme_author": "Elkfox",
    "theme_documentation_url": "https://github.com/Elkfox/Concrete",
    "theme_support_url": "https://github.com/Elkfox/Concrete/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_brand",
        "label": "Brand Color",
        "default": "#5625DD"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Main Text Color",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#EFEFEF"
      },
      {
        "type": "color",
        "id": "color_alternate",
        "label": "Warning Color",
        "default": "#F26968"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "font_heading",
        "default": "open_sans_n4",
        "label": "Headings"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "default": "open_sans_n4",
        "label": "Body text"
      }
    ]
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo width",
        "min": 10,
        "max": 1000,
        "step": 10,
        "default": 200,
        "unit": "px"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
