<!-- templates/blog.liquid -->

{% assign column_width = 'column l6' %}

{% paginate blog.articles by 2 %}

  <div class="row">

    <div class="column l9 m12 s12">
      {% if current_tags %}
        <h1>{{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}</h1>
      {% else %}
        <h1>{{ blog.title }}</h1>
      {% endif %}

      <div class="row">
        {% for article in blog.articles %}
          {% include 'blog-article' %}
        {% endfor %}
      </div>

      {% include 'pagination' %}
    </div>

    <aside class="column l3 m-hide s-hide">
      <p> TO DO: INSERT TAG LOOP! </p>
    </aside>

  </div>

{% endpaginate %}
